<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalJefe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0E8EA"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvPortada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@color/colorAccent"
            android:text="Empresa"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="HardcodedText"
            tools:text="Empresa"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEditarEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80D8FF"
            android:layout_marginBottom="32dp"
            android:onClick="editarEmpresa"
            android:text="Editar datos de la empresa"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <Button
            android:id="@+id/btnNuevosEmpleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80D8FF"
            android:layout_marginBottom="32dp"
            android:onClick="nuevosEmpleados"
            android:text="Añadir nuevos empleados"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80D8FF"
            android:layout_marginBottom="32dp"
            android:onClick="cerrarSesion"
            android:text="Cerrar sesión"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/txtEmpleados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleados:"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="32dp"
                    tools:ignore="NestedScrolling">

                    <LinearLayout
                        android:id="@+id/llEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:text="Pepe"
                            tools:ignore="HardcodedText,UnusedAttribute" />
                    </LinearLayout>
                </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>